  "database_schema_detailed": {
    "total_models": 9,
    "relationships": "Fully normalized with foreign keys and indexes",
    "models": [
      {
        "name": "User",
        "purpose": "User accounts with Google OAuth integration",
        "fields": {
          "id": "UUID primary key",
          "googleId": "Google OAuth ID (unique, nullable)",
          "username": "Unique username (auto-generated from Google)",
          "email": "User email from Google",
          "passwordHash": "Nullable for OAuth users",
          "displayName": "Display name from Google",
          "bio": "User biography (optional)",
          "avatar": "Profile picture URL from Google",
          "isStreamer": "Boolean flag for streamer features",
          "createdAt": "Account creation timestamp",
          "updatedAt": "Last update timestamp"
        },
        "relationships": [
          "One-to-many with UserGame (library)",
          "One-to-many with PlaySession (gaming sessions)",
          "One-to-many with Comment (user comments)",
          "One-to-many with GameList (user lists)",
          "One-to-many with Activity (user activities)",
          "One-to-many with Stream (streaming sessions)",
          "Many-to-many with User (following system)"
        ],
        "indexes": ["username", "createdAt"]
      },
      {
        "name": "Game",
        "purpose": "Game data cached from RAWG API with local statistics",
        "fields": {
          "id": "UUID primary key",
          "rawgId": "RAWG API game ID (unique)",
          "title": "Game title",
          "description": "Game description",
          "coverImage": "Cover art URL",
          "backgroundImage": "Background image URL",
          "releaseDate": "Game release date",
          "genres": "Array of genre strings",
          "platforms": "Array of platform strings",
          "developer": "Developer name",
          "publisher": "Publisher name",
          "metacriticScore": "Metacritic score",
          "avgRating": "Average user rating (calculated)",
          "ratingCount": "Number of ratings",
          "playingCount": "Users currently playing",
          "completedCount": "Users who completed",
          "abandonedCount": "Users who abandoned",
          "wishlistCount": "Users who wishlisted"
        },
        "relationships": [
          "One-to-many with UserGame",
          "One-to-many with PlaySession", 
          "One-to-many with Comment",
          "One-to-many with GameListItem",
          "One-to-many with Activity",
          "One-to-many with Stream"
        ],
        "indexes": ["title", "avgRating", "releaseDate", "genres"]
      },
      {
        "name": "UserGame",
        "purpose": "Junction table for user-game relationships with status tracking",
        "fields": {
          "id": "UUID primary key",
          "userId": "Foreign key to User",
          "gameId": "Foreign key to Game", 
          "status": "Enum: WISHLIST|BACKLOG|PLAYING|PAUSED|COMPLETED|ABANDONED",
          "rating": "User rating 1-10 scale (SmallInt)",
          "review": "Written review text",
          "isPrivate": "Privacy flag for entry",
          "isFavorite": "Favorite flag",
          "playCount": "Number of times played",
          "totalHours": "Total hours played (Float)",
          "startedAt": "When user started playing",
          "completedAt": "When user completed game",
          "createdAt": "Entry creation time",
          "updatedAt": "Last update time"
        },
        "constraints": ["Unique constraint on userId+gameId"],
        "indexes": ["status", "rating", "createdAt"]
      },
      {
        "name": "PlaySession",
        "purpose": "Individual gaming sessions for detailed time tracking",
        "fields": {
          "id": "UUID primary key",
          "userId": "Foreign key to User",
          "gameId": "Foreign key to Game",
          "userGameId": "Optional foreign key to UserGame",
          "durationMinutes": "Session duration in minutes",
          "platform": "Platform played on (PC, PS5, Xbox, etc.)",
          "note": "Optional session notes",
          "playedAt": "When session occurred",
          "createdAt": "Record creation time"
        },
        "relationships": ["Many-to-one with User, Game, UserGame"],
        "indexes": ["playedAt", "userId"]
      },
      {
        "name": "Comment",
        "purpose": "User comments and reviews on games",
        "fields": {
          "id": "UUID primary key",
          "userId": "Foreign key to User",
          "gameId": "Foreign key to Game",
          "content": "Comment text content",
          "isReview": "Boolean flag for review vs comment",
          "likes": "Number of likes (default 0)",
          "createdAt": "Comment creation time",
          "updatedAt": "Last edit time"
        },
        "indexes": ["gameId", "createdAt", "likes"]
      },
      {
        "name": "GameList",
        "purpose": "User-created lists for organizing games",
        "fields": {
          "id": "UUID primary key",
          "userId": "Foreign key to User",
          "title": "List title",
          "description": "Optional list description",
          "type": "Enum: CUSTOM|FAVORITES|RECOMMENDATIONS|YEAR_END",
          "isPublic": "Public visibility flag",
          "createdAt": "List creation time",
          "updatedAt": "Last update time"
        },
        "relationships": ["One-to-many with GameListItem"],
        "indexes": ["userId", "type", "createdAt"]
      },
      {
        "name": "GameListItem",
        "purpose": "Items within game lists with ordering",
        "fields": {
          "id": "UUID primary key",
          "listId": "Foreign key to GameList",
          "gameId": "Foreign key to Game",
          "position": "Order position in list",
          "note": "Optional note about game in list"
        },
        "constraints": ["Unique constraint on listId+gameId"],
        "indexes": ["position"]
      },
      {
        "name": "Follow",
        "purpose": "Social following relationships between users",
        "fields": {
          "followerId": "User who follows",
          "followingId": "User being followed",
          "createdAt": "Follow relationship creation time"
        },
        "constraints": ["Composite primary key on followerId+followingId"]
      },
      {
        "name": "Stream",
        "purpose": "Streaming session tracking for content creators",
        "fields": {
          "id": "UUID primary key",
          "userId": "Foreign key to User",
          "gameId": "Foreign key to Game", 
          "sessionId": "Optional foreign key to PlaySession",
          "platform": "Enum: TWITCH|YOUTUBE|KICK|FACEBOOK|OTHER",
          "streamUrl": "Stream/VOD URL",
          "title": "Stream title",
          "isLive": "Live status flag",
          "startedAt": "Stream start time",
          "endedAt": "Stream end time",
          "createdAt": "Record creation time"
        },
        "indexes": ["platform", "startedAt"]
      },
      {
        "name": "Activity",
        "purpose": "Activity feed tracking all user actions",
        "fields": {
          "id": "UUID primary key",
          "userId": "Foreign key to User",
          "gameId": "Optional foreign key to Game",
          "type": "Enum: STARTED|SESSION|COMPLETED|REVIEW|COMMENT|LIST_CREATED|GAME_ADDED",
          "entityId": "ID of related entity (comment, list, etc.)",
          "metadata": "JSON metadata for activity details",
          "createdAt": "Activity timestamp"
        },
        "indexes": ["createdAt", "userId", "type"]
      }
    ]
  },

  "api_endpoints_comprehensive": {
    "base_url": "http://localhost:5000/api",
    "authentication_required": "Session-based with Google OAuth",
    "endpoints": {
      "authentication": {
        "GET /auth/google": {
          "purpose": "Initiate Google OAuth flow",
          "auth_required": false,
          "response": "Redirect to Google OAuth"
        },
        "GET /auth/google/callback": {
          "purpose": "Handle Google OAuth callback",
          "auth_required": false,
          "response": "Redirect to frontend with session"
        },
        "GET /auth/me": {
          "purpose": "Get current authenticated user",
          "auth_required": false,
          "response": "User object or null"
        },
        "POST /auth/logout": {
          "purpose": "Logout current user",
          "auth_required": true,
          "response": "Success confirmation"
        }
      },
      "games": {
        "GET /games": {
          "purpose": "Get games with filtering and search",
          "auth_required": false,
          "parameters": {
            "search": "Game title search",
            "genre": "Filter by genre",
            "platform": "Filter by platform", 
            "sortBy": "Sort order (rating|year|popularity)",
            "page": "Page number for pagination"
          },
          "response": "Paginated games array with metadata"
        },
        "GET /games/genres": {
          "purpose": "Get available game genres from RAWG",
          "auth_required": false,
          "response": "Array of genre objects {id, name}"
        },
        "GET /games/platforms": {
          "purpose": "Get available gaming platforms from RAWG",
          "auth_required": false,
          "response": "Array of platform objects {id, name}"
        },
        "GET /games/:id": {
          "purpose": "Get detailed game information with stats",
          "auth_required": false,
          "response": "Game object with comments and statistics"
        },
        "POST /games/:gameId/library": {
          "purpose": "Add or update game in user's library",
          "auth_required": true,
          "body": {
            "status": "Game status enum",
            "rating": "Optional 1-10 rating",
            "review": "Optional review text"
          },
          "response": "UserGame object"
        }
      },
      "users": {
        "GET /users/:id": {
          "purpose": "Get user profile with statistics",
          "auth_required": false,
          "response": "User object with game counts and stats"
        },
        "GET /users/:id/library": {
          "purpose": "Get user's game library",
          "auth_required": false,
          "parameters": {
            "status": "Filter by game status",
            "page": "Page number",
            "limit": "Items per page"
          },
          "response": "Paginated user games with game details"
        },
        "GET /users/:id/activity": {
          "purpose": "Get user's activity feed",
          "auth_required": false,
          "parameters": {
            "page": "Page number",
            "limit": "Items per page"
          },
          "response": "Paginated activity items"
        }
      },
      "comments": {
        "GET /comments/game/:gameId": {
          "purpose": "Get comments for a specific game",
          "auth_required": false,
          "parameters": {
            "page": "Page number",
            "limit": "Comments per page"
          },
          "response": "Paginated comments with user info"
        },
        "POST /comments/game/:gameId": {
          "purpose": "Add comment or review to game",
          "auth_required": true,
          "body": {
            "content": "Comment text",
            "isReview": "Boolean flag for review"
          },
          "response": "Created comment object"
        }
      }
    }
  },

